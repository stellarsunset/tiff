{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "automergeType": "pr",
      "labels": [
        "dependencies",
        "automerge"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "major-update"
      ],
      "schedule": [
        "before 5am on saturday"
      ]
    }
  ],
  "schedule": [
    "at any time"
  ],
  "prConcurrentLimit": 5
}
